import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.widget.Button
import android.widget.TextView
import android.widget.ImageView
import android.view.animation.RotateAnimation
import android.view.animation.Animation
import kotlin.random.Random
import android.os.Handler
import android.os.Looper

class MainActivity : AppCompatActivity() {

    private lateinit var spinButton: Button
    private lateinit var resultText: TextView
    private lateinit var wheelImage: ImageView

    private val handler = Handler(Looper.getMainLooper())
    private val segments = 12
    private val segmentNames = (1..segments).map { it.toString() }

    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)

        spinButton = findViewById(R.id.spinButton)
        resultText = findViewById(R.id.resultText)
        wheelImage = findViewById(R.id.wheelImage)

        spinButton.setOnClickListener {
            spinWheel()
        }
    }

    private fun spinWheel() {
        val predictedIndex = Random.nextInt(segments)
        val predictedSegment = segmentNames[predictedIndex]

        // 2 সেকেন্ড আগে Prediction দেখানো
        resultText.text = "🔮 Prediction: $predictedSegment"

        handler.postDelayed({
            val randomRotation = 360 * 5 + predictedIndex * (360 / segments)
            val rotateAnim = RotateAnimation(
                0f, randomRotation.toFloat(),
                Animation.RELATIVE_TO_SELF, 0.5f,
                Animation.RELATIVE_TO_SELF, 0.5f
            )
            rotateAnim.duration = 3000
            rotateAnim.fillAfter = true
            rotateAnim.setAnimationListener(object : Animation.AnimationListener {
                override fun onAnimationStart(animation: Animation?) {}
                override fun onAnimationEnd(animation: Animation?) {
                    resultText.text = "🎯 Result: $predictedSegment"
                }
                override fun onAnimationRepeat(animation: Animation?) {}
            })
            wheelImage.startAnimation(rotateAnim)
        }, 2000)
    } <?xml version="1.0" encoding="utf-8"?>
